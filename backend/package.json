{
  "name": "scpper-cn-backend",
  "version": "2.0.0",
  "description": "SCPPER-CN backend service with Prisma database integration",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "sync": "node --import tsx/esm src/cli/sync.ts",
    "sync:full": "node --import tsx/esm src/cli/sync.ts --full",
    "sync:test": "node --import tsx/esm src/cli/sync.ts --test",
    "phase-a": "node --import tsx/esm src/cli/sync.ts phase-a",
    "phase-b": "node --import tsx/esm src/cli/sync.ts phase-b",
    "phase-c": "node --import tsx/esm src/cli/sync.ts phase-c",
    "analyze": "node --import tsx/esm src/cli/sync.ts analyze",
    "analyze:incremental": "node --import tsx/esm -e \"import {analyzeIncremental} from './src/jobs/IncrementalAnalyzeJob.js'; analyzeIncremental();\"",
    "analyze:full": "node --import tsx/esm -e \"import {analyzeIncremental} from './src/jobs/IncrementalAnalyzeJob.js'; analyzeIncremental({forceFullAnalysis: true});\"",
    "search:sync": "node --import tsx/esm -e \"import {SearchService} from './src/services/SearchService.js'; new SearchService().syncPagesToSearchIndex();\"",
    "stats:extended": "node --import tsx/esm -e \"import {generateExtendedInterestingStats} from './src/jobs/ExtendedInterestingStatsJob.js'; import {PrismaClient} from '@prisma/client'; const p = new PrismaClient(); generateExtendedInterestingStats(p).then(() => p.$disconnect());\"",
    "migrate:complete": "node --import tsx/esm scripts/run-complete-migration.ts",
    "migrate:backfill": "node --import tsx/esm scripts/migrate-and-backfill.ts",
    "query": "node --import tsx/esm src/cli/query.ts",
    "test": "node src/core/example-usage.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset"
  },
  "dependencies": {
    "@prisma/client": "^5.20.0",
    "@types/uuid": "^10.0.0",
    "graphql-request": "^6.1.0",
    "table": "^6.9.0",
    "tsx": "^4.19.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "prisma": "^5.20.0",
    "typescript": "^5.6.2"
  }
}
